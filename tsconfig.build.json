  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__",
    "e2e",
    "dist",
    "**/*.seed.ts"
  ]
}