{
  "compilerOptions": {
    "declaration": false,
    "noEmit": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "ES2020.String",
      "ES2020.Promise",
      "ES2020.Symbol.WellKnown"
    ],
    "pretty": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@ggc/*": [
        "apps/*"
      ]
    }
  },
  "types": [
    "node",
    "jest",
  ]
}